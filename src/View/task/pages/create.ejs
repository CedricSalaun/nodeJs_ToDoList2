<% include ../partials/header.ejs %>
<div class = "columns">
    <div class = "column">
        <div class = "column">
            <h1 class = "title">
                <a href = "/">Bienvenue</a>
            </h1>
        </div>
    </div>
</div>
<form action = "/create/task" method = "post">
    <div class = "column">
        <div class = "field">
            <div class = "field">
                <label class = "label is-small" for="title">Titre</label>
                <div class = "field-body">
                    <div class = "field">
                        <p class = "control is-expanded">
                            <input class = "input"
                                   type = "text"
                                   placeholder = "Titre"
                            name="title"
                            id="title">
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class = "column">
        <div class = "field columns"
             style = "margin-bottom: -7px;">
            <label class = "is-small label column is-11" for="resume">Résumé</label>
            <label class = "is-small label column" for="status">Statut</label>
        </div>
        <div class = "field">
            <div class = "field-body">
                <div class = "field">
                    <p class = "control is-expanded">
                        <input class = "input"
                               type = "text"
                               placeholder = "Résumé"
                        name="resume"
                        id="resume">
                    </p>
                </div>
                <div class = "field is-narrow">
                    <div class = "control">
                        <div class = "select">
                            <select id="status" name="status">
                                <option value="1">À faire
                                </option>
                                <option value="2">En cours
                                </option>
                                <option value="3">Fini
                                </option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class = "column">
        <div class = "field is-horizontal">
            <div class = "field-body">
                <div class = "field">
                    <div class = "control">
                        <label for = "content"></label>
                    <textarea class = "textarea"
                              placeholder = "Description de la tâche"
                    name="content" id="content"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class = "field is-horizontal is-grouped">
            <div class = "field-body">
                <div class = "field">
                    <div class = "control">
                        <input class = "button is-primary" value="Ajouter la tâche" type="submit">
                        <a href = "/">
                            <button class = "button">
                                Annuler
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<% include ../partials/footer.ejs %>